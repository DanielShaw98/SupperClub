<div class="index-body">
  <h1 class="index-header my-4"><strong>Upcoming Events</strong></h1>
    <div class="container-fluid mx-5">
    <div class="row gy-4">
      <% @events.each do |event| %>
        <div class ="card col-2 mx-2 p-4 rounded">
          <div class="index">
            <h5><strong>🧑‍🍳 <%= event.user.first_name %> <%= event.user.last_name %></strong></h5>
            <p><%= event.venue %></p>
            <p><%= event.cuisine %></p>
            <p><%= event.date %></p>
            <p><%= event.price %></p>
            <%= link_to "", event_path(event), class: 'stretched-link' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
