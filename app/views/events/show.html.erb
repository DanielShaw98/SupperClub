
<div class="container" style="position:absolute; width: 80%; margin: 5%;">
  <div class="image-carousel">
    <div class="card" style="position:absolute; width: 100%; height:100vh;">
      <%# <img src="https://media.istockphoto.com/id/1403963902/photo/italian-pork-and-chickpea-soup-with-vegetables-close-up-in-a-bowl-horizontal.jpg?s=612x612&w=0&k=20&c=tOng2NnMAYkyrG-UHgNq0SpqvM9YExxaw6sGQWgEBy4=" class="card-img-top" alt="..."> %>
      <div id="carouselExampleControls" class="carousel slide w-50" data-ride="carousel">
        <div class="carousel-inner">
          <% if @event.photos.attached? %>
            <% @event.photos.each_with_index do |photo, i| %>
              <% if i == 0 %>
                <div class="carousel-item active">
                  <%= cl_image_tag photo.key, class: 'carousel-img d-block'%>
                </div>
              <% else %>
                <div class="carousel-item">
                  <%= cl_image_tag photo.key, class: 'carousel-img d-block'%>
                </div>
              <% end %>
            <% end %>
          <% else %>
            <div class="carousel-item active">
              <%= image_tag 'default-event', alt: "default-event-image", class: 'carousel-img d-block'%>
            </div>
          <% end %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    </div>

  <div class="text-and-form">

    <div class="text">
      <h3><p class="card-text">Menu</p></h3>
      <div class="card-body" style="text-align: center" >
        <h4 class="card-title my=3" >Chef: <%= @event.user.first_name %> <%= @event.user.last_name %></h4>
        <h5 class="card-title my=3" >Cuisine: <%= @event.cuisine %></h5>
        <h5 class="card-text my=3">Menu: </h5>
        <%= @event.menu %>
        <h5 class="card-text my=10">Description</h3>
        <%= @event.description %>
        <h5 class="card-text my=3">Venue: <%= @event.venue %> </h5>
        <h5 class="card-text my=3">Price: Â£<%= @event.price %> </h5>
      </div>
    </div>

    <div class="form">
      <h5>Add event:</h5>
      <div class="my-2">
        <%= render partial: "html_components/create_ticket_form", users: @user, events: @event, tickets: @ticket %>
      </div>
    </div>
  </div>
</div>
