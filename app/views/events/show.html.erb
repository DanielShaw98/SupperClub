<div class="container-show">
  <div class="image-carousel-show">
      <%# <img src="https://media.istockphoto.com/id/1403963902/photo/italian-pork-and-chickpea-soup-with-vegetables-close-up-in-a-bowl-horizontal.jpg?s=612x612&w=0&k=20&c=tOng2NnMAYkyrG-UHgNq0SpqvM9YExxaw6sGQWgEBy4=" class="card-img-top" alt="..."> %>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% if @event.photos.attached? %>
            <% @event.photos.each_with_index do |photo, i| %>
              <% if i == 0 %>
                <div class="carousel-item active">
                  <%= cl_image_tag photo.key, class: 'carousel-img d-block'%>
                </div>
              <% else %>
                <div class="carousel-item">
                  <%= cl_image_tag photo.key, class: 'carousel-img d-block'%>
                </div>
              <% end %>
            <% end %>
          <% else %>
            <div class="carousel-item active">
              <%= image_tag 'default-event', alt: "default-event-image", class: 'carousel-img d-block'%>
            </div>
          <% end %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

  <div class="text-and-form-show">

    <div class="text-show">
      <h4><strong><%= @event.user.first_name %> <%= @event.user.last_name %></strong></h4>
      <h5><strong>Â£ <%= @event.price.to_i %></strong></h5>
      <h5><%= @event.venue %> </h5>
      <p><em><%= @event.menu %></em></p>
      <p><%= @event.description %></p>
    </div>

    <div class="form-show">
      <p>Add Event:</p>
      <div class="my-2">
        <%= render partial: "html_components/create_ticket_form", users: @user, events: @event, tickets: @ticket %>
      </div>
    </div>
  </div>
</div>
