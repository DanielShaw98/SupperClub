<%= simple_form_for(@event) do |f| %>
  <%= f.input :venue %>
  <%= f.input :menu, placeholder: "List your courses here" %>
  <%= f.input :cuisine %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :capacity, as: :integer %>
  <%= f.input :date,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit %>
<% end %>
