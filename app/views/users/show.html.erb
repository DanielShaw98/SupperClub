<h1>profile page</h1>
<h3>Hi <%= @user.first_name %> <%= @user.last_name %></h3>
<%# I sort the events that the user hosts %>
<h2>Upcoming events: </h2>
<% @upcoming_events.each do |event| %>
  <p><%= distance_of_time_in_words(event.date.to_time - Time.now) %></p>
  <%= event.description %>
<% end %>

